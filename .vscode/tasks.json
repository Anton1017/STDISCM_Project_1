{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile SFML executable",
            "type": "cppbuild",
            "command": "g++",
            "args": [
                "-o",
                "${workspaceFolder}\\main.exe",
                "-I",
                "${workspaceFolder}\\SFML-2.6.1\\include",
                "-L",
                "${workspaceFolder}\\SFML-2.6.1\\lib",
                "${workspaceFolder}\\main.cpp",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-std=c++20"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
